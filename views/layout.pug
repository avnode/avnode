doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - AVnode.net
    link(rel='stylesheet', href='/css/font-awesome/font-awesome.css')
    link(rel='stylesheet', href='/css/main.css')
  body
    nav.navbar.navbar-fixed-top.navbar-dark.bg-inverse
      .container
        a.navbar-brand(href="/")
          img(src="/images/logo.svg" width="30" height="30" class="d-inline-block align-top" alt="")
        ul.nav.navbar-nav
          li.nav-item
            a.nav-link(href="/performers")=__('Performers')
        ul.nav.navbar-nav.float-xs-right
          if user
            li.nav-item
              a.nav-link(href="/account")
                i.fa.fa-user.fa-fw
                |  #{user.email}
            li.nav-item
              a.nav-link(href="/logout")
                i.fa.fa-sign-out.fa-fw
                =__('Logout')
          else
            li.nav-item
              a.nav-link(href="/login")
                i.fa.fa-sign-out.fa-fw
                =__('Login')
            li.nav-item
              a.nav-link(href="/signup")
                i.fa.fa-sign-in.fa-fw
                =__('Sign up')
    main
      .container
        include partials/flash
        block content
    footer
      .container
        .text-muted=__('AVnode.net')
