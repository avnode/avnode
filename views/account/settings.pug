extends ../layout

block content
  .row
    .col-lg-3.col-md-4
      include menu
    .col-lg-9.col-md-8
      form(method='post')
        input(type='hidden', name='_csrf', value=_csrf)
        .modal(id='stagename')
          .modal-dialog
            .modal-content
              .modal-header
                button(type='button', class='close', data-dismiss='modal', aria-label='Close')
                  span(aria-hidden='true') &times;
                h4.modal-title=__('Caution!')
              .modal-body
                p=__('Changing your stagename can have unintended side effects!')
                label(for='stagename')=__('Stagename')
                .input-group
                  span.input-group-addon #{settings.base}
                  input.form-control(type='text', name='stagename', value=user.stagename)
              .modal-footer
                button.btn.btn-danger=__('Change')
        .card
          .card-header=__('Stagename')
          .card-block
            p.card-text
              strong #{settings.base}#{user.stagename}
            button.btn.btn-secondary(type='button', data-toggle='modal', data-target='#stagename')=__('Change')
