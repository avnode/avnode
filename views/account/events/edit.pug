extends ../../layout

block content
  include ../nav
  .row
    .col-lg-3.col-md-4
      include ../subnav
    .col-lg-9.col-md-8
      form(method='post')
        input(type='hidden', name='_csrf', value=_csrf)
        .card
          .card-header=__('Event Details')
          .card-block
            .form-group
              label(for='title')=__('Title')
              input.form-control(type='text', name='title', id='title', value=event.title, placeholder='', autofocus)
            .form-group
              label(for='subtitle')=__('Subtitle')
              input.form-control(type='text', name='subtitle', id='subtitle', value=event.subtitle, placeholder='')
            .form-group
              button.btn.btn-primary(type='submit')=__('Save')
