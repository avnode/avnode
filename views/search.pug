extends layout

block content

  form(method="get")
    .form-group.row
      .col-sm-11
        input.form-control(
          placeholder="What are you searching for?"
          type="text"
          name="q"
          value=q
        )
      .col-sm-1
        button.btn.btn-primary(
          type="submit"
        )=__('search')

  if resultCount
    each hit in data
      case hit._type
        when 'event'
          - var item = hit._source
          include partials/search/event
        when 'user'
          - var item = hit._source
          include partials/search/performer
        when 'crew'
          - var item = hit._source
          include partials/search/crew
  else
    p=__('No results foundâ€¦')
